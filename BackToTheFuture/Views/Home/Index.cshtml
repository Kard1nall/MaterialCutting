@model BackToTheFuture.Models.InputData

<head>
    <link rel="stylesheet" href="~/Content/Site.css">
</head>

<body>
    <div class="container-custom">
        <h1>
            Раскрой рулонных стальных заготовок
        </h1>
        <form action="/Home/Calculate" method="post">
            <table class="table">
                <tr>
                    <th rowspan="2">Вид заготовки</th>
                    <th rowspan="2">Площадь поверхности заготовки, м2</th>
                    <th colspan="4">Количество заготовок на 1 изделие по соответствующему способу раскроя, шт.</th>
                    <th rowspan="2">Количество заготовок на 1 изделие, шт.</th>
                </tr>
                <tr>
                    <td><input type="text" name="sampleTypes[0].Id" value="@Model.sampleTypes[0].Id" readonly /></td>
                    <td><input type="text" name="sampleTypes[1].Id" value="@Model.sampleTypes[1].Id" readonly /></td>
                    <td><input type="text" name="sampleTypes[2].Id" value="@Model.sampleTypes[2].Id" readonly /></td>
                    <td><input type="text" name="sampleTypes[3].Id" value="@Model.sampleTypes[3].Id" readonly /></td>

                </tr>
                <tr>
                    <td>А1</td>
                    <td><input type="text" name="sampleParams[0].SquareForOne" value="@Model.sampleParams[0].SquareForOne" min="0" required step="0.1" onkeypress="return isNumberKey(event)" /> </td>
                    <td><input type="number" name="sampleTypes[0].Count1" value="@Model.sampleTypes[0].Count1" required min="0" /> </td>
                    <td><input type="number" name="sampleTypes[1].Count1" value="@Model.sampleTypes[1].Count1" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[2].Count1" value="@Model.sampleTypes[2].Count1" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[3].Count1" value="@Model.sampleTypes[3].Count1" required min="0" /></td>

                    <td><input type="number" name="sampleParams[0].CountForOne" value="@Model.sampleParams[0].CountForOne" required min="0" /></td>
                </tr>
                <tr>
                    <td>А2</td>
                    <td><input type="text" name="sampleParams[1].SquareForOne" value="@Model.sampleParams[1].SquareForOne" required min="0" step="0.1" onkeypress="return isNumberKey(event)" /></td>
                    <td><input type="number" name="sampleTypes[0].Count2" value="@Model.sampleTypes[0].Count2" required min="0" style="" /></td>
                    <td><input type="number" name="sampleTypes[1].Count2" value="@Model.sampleTypes[1].Count2" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[2].Count2" value="@Model.sampleTypes[2].Count2" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[3].Count2" value="@Model.sampleTypes[3].Count2" required min="0" /></td>

                    <td><input type="number" name="sampleParams[1].CountForOne" value="@Model.sampleParams[1].CountForOne" required min="0" /></td>
                </tr>
                <tr>
                    <td>А3</td>
                    <td><input type="text" name="sampleParams[2].SquareForOne" value="@Model.sampleParams[2].SquareForOne" required min="0" step="0.1" onkeypress="return isNumberKey(event)" /></td>
                    <td><input type="number" name="sampleTypes[0].Count3" value="@Model.sampleTypes[0].Count3" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[1].Count3" value="@Model.sampleTypes[1].Count3" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[2].Count3" value="@Model.sampleTypes[2].Count3" required min="0" /></td>
                    <td><input type="number" name="sampleTypes[3].Count3" value="@Model.sampleTypes[3].Count3" required min="0" /></td>
                    <td><input type="number" name="sampleParams[2].CountForOne" value="@Model.sampleParams[2].CountForOne" required min="0" /></td>
                </tr>
                <tr>
                    <td class="naming" colspan="4">Количество материала в одном рулоне, FS =</td>
                    <td><input type="number" name="areaSquare" value="@Model.areaSquare" required min="0" /></td>
                </tr>
                <tr>
                    <td class="naming" colspan="4">Всего необходимо изготовить R шт. изделий</td>
                    <td><input type="number" name="totalCount" value="@Model.totalCount" required min="0" />  </td>
                </tr>
            </table>
            <button type="submit" class="btn-lg center-block" style="background-color:darkred; color:white;">ВЫПОЛНИТЬ РАССЧЁТ</button>
        </form>
    </div>
</body>

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode
        if (charCode > 31 && (charCode != 46 && (charCode < 48 || charCode > 57)))
            return false;
        return true;
    }
</script>